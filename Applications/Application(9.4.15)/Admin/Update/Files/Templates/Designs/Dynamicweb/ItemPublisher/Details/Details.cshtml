@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

<div class="items">
    <div class="item-details">
        @foreach (var group in GetLoop("ItemPublisher:Item.Groups"))
        {
            <fieldset>
                <legend>@group.GetValue("ItemPublisher:Item.Group.Name")</legend>

                <div class="form-horizontal readonly">

                    @foreach (var field in group.GetLoop("ItemPublisher:Item.Group.Fields"))
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label">@field.GetValue("ItemPublisher:Item.Field.Name")</label>
                            <div class="col-sm-10">
                                <span class="form-control">@field.GetValue("ItemPublisher:Item.Field")</span>
                            </div>
                        </div>
                    }
                </div>
            </fieldset>
        }
    </div>

    <div class="item-details-controls">
        <a class="btn btn-link" href="Default.aspx?Id=@Pageview.Page.ID">@Translate("Back_to_list", "Back to list")</a>
    </div>
</div>
