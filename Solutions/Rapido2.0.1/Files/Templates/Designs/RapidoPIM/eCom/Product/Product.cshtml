                @if (documentsCount > 0)
                {
                    <h6 class="panel__header panel__header--line dw-mod u-margin-bottom">@Translate("Documents") (@documentsCount)</h6>

                    <ul class="panel-list">
                        @foreach (LoopItem customField in GetLoop("CustomFieldValues"))
                        {
                            if (!String.IsNullOrEmpty(customField.GetString("Document.FullPath")))
                            {
                                <li class="panel-list__item">
                                    <div class="panel-list__item-check"><input type="checkbox" name="Document_@customField.GetString("Document.FullPath")" class="u-no-margin" /></div>
                                    <div class="panel-list__item-name u-truncate-text u-max-w220px">@Path.GetFileName(customField.GetString("Document.FullPath"))</div>
                                </li>
                            }
                        }

                        @foreach (LoopItem categoryGroup in GetLoop("ProductCategories"))
                        {
                            foreach (LoopItem categoryField in categoryGroup.GetLoop("ProductCategoryFields"))
                            {
                                string fieldValue = categoryField.GetString("Ecom:Product.CategoryField.Value");

                                if (!String.IsNullOrEmpty(fieldValue))
                                {
                                    if (categoryField.GetString("Ecom:Product.CategoryField.TypeID") == "9")
                                    {
                                        <li class="panel-list__item">
                                            <div class="panel-list__item-check"><input type="checkbox" name="Document_@fieldValue" class="u-no-margin" /></div>
                                            <div class="panel-list__item-name u-truncate-text u-max-w220px">@Path.GetFileName(fieldValue)</div>
