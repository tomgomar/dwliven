                                <div class="panel-list__item-image"><img src="@thumb" alt="@Path.GetFileName(image)"></div>
                                <div class="panel-list__item-name u-truncate-text u-w170px">@Path.GetFileName(image)</div>
                            </li>
                        }
                    }

                    @foreach (LoopItem detail in GetLoop("Details"))
                    {
                        string image = detail.GetString("Ecom:Product:Detail.Image.Clean");
                        if (!String.IsNullOrEmpty(image))
                        {
                            string thumb = "/Admin/Public/GetImage.ashx?width=55&amp;height=55&amp;crop=5&amp;FillCanvas=True&amp;Compression=75&amp;image=" + image;

                            <li class="panel-list__item">
                                <div class="panel-list__item-check"><input type="checkbox" name="Image_@image" class="u-no-margin" /></div>
                                <div class="panel-list__item-image"><img src="@thumb" alt="@Path.GetFileName(image)" class="flex-img"></div>
                                <div class="panel-list__item-name u-truncate-text u-w170px">@Path.GetFileName(image)</div>
                            </li>
                        }
                    }
